---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
// 1. Import the content from our new JSON file
import content from '../data/about.json';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={'About Us - ' + SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.about-content {
				line-height: 1.7;
			}
			.about-content h2 {
				color: #228b22; /* Garden green */
				border-bottom: 2px solid #eee;
				padding-bottom: 10px;
			}
			.values-list {
				list-style-type: 'âœ…'; /* Simple checkmark */
				padding-left: 20px;
			}
			.values-list li {
				padding-left: 10px;
				margin-bottom: 10px;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- 2. The page content is now dynamic -->
			<div class="about-content">
				<h1>About Us</h1>

				<h2>Our Story</h2>
				<p>{content.story}</p>

				
				<h2>Our Values</h2>
				<ul class="values-list">
					{content.values.map(value => (
						<li>
							<strong>{value.title}:</strong> {value.text}
						</li>
					))}
				</ul>
			</div>
		</main>
		<Footer />
	</body>
</html>