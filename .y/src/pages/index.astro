---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION } from '../consts';
// 1. Import new content file
import content from '../data/home.json';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Lenihan Landscaping - Home" description={SITE_DESCRIPTION} />
		<style>
			.button {
				display: inline-block;
				padding: 12px 24px;
				background-color: #228b22;
				color: white;
				text-decoration: none;
				border-radius: 8px;
				font-weight: bold;
				margin-top: 20px;
				transition: background-color 0.3s;
			}
			.button:hover {
				background-color: #1a6a1a;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- 2. Make content dynamic -->
			<h1>{content.heading}</h1>
			<p style="white-space: pre-wrap;">{content.usp}</p>
			
			<a href="/contact" class="button">{content.button_text}</a>
			
		</main>
		<Footer />
	</body>
</html>