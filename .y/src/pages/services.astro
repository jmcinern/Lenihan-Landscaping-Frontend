---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import content from '../data/services.json';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Our Services - Lenihan Landscaping" description="Explore our design, build, and maintenance services." />
        <style>
            /* Simple styles for the list */
            .services-list {
                font-size: 1.1em;
                line-height: 1.8;
                color: #333;
                margin-top: 1rem;
            }
            .services-list li {
                margin-bottom: 0.5rem;
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <h1>Our Services</h1>
            
            <!-- Changed from cards to a bulleted list -->
            <ul class="services-list">
                {content.services.map(service => (
                    <li>
                        {service.title}
                    </li>
                ))}
            </ul>

        </main>
        <Footer />
    </body>
</html>