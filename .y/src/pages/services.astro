---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// 1. Import the content from our new JSON file
import content from '../data/services.json';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Our Services - Lenihan Landscaping" description="Explore our design, build, and maintenance services." />
		<style>
			.service-card {
				border: 1px solid #eee;
				border-radius: 8px;
				padding: 24px;
				margin-bottom: 20px;
				background: #f9f9f9;
			}
			.service-card h2 {
				margin-top: 0;
				color: #228b22; /* Garden green */
			}
			/* This style makes line breaks (\n) work */
			.service-card p {
				white-space: pre-wrap;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Our Services</h1>
			
			<!-- 2. We now loop over the services from the JSON file -->
			{content.services.map(service => (
				<div class="service-card">
					<h2>{service.title}</h2>
					<p>{service.text}</p>
				</div>
			))}

		</main>
		<Footer />
	</body>
</html>