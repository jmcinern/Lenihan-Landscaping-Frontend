---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<a href="/">{SITE_TITLE}</a>
		</div>

		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	/* These are the layout styles we fixed */
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 960px; 
		margin: 0 auto; 
		padding: 0.5em 0;
	}
	.brand {
		font-size: 1.5em;
		font-weight: 600;
	}
	.brand a {
		text-decoration: none;
		color: var(--text); 
	}
	.nav-links {
		display: flex;
		gap: 1.5em;
	}
	@media (max-width: 720px) {
		.nav-links {
			display: none;
		}
	}

	/* --- THIS IS THE FIX ---
	   This :global() selector will override the ugly blue
	   from the template, even inside the HeaderLink component.
	*/

	/* Style for non-active links */
	:global(.nav-links a) {
		text-decoration: none !important;
		color: #555 !important; /* A nice dark grey */
		background-color: transparent !important;
		padding: 0.5em 1em;
		border-radius: 6px;
		transition: all 0.2s ease;
	}

	/* Style for when you hover over a link */
	:global(.nav-links a:hover) {
		color: #228b22 !important; /* Garden green on hover */
		background-color: #f0f8f0 !important; /* Light green background */
	}

	/* Style for the link of the page you are currently on */
	:global(.nav-links a.active) {
		color: #228b22 !important; /* Garden green for active link */
		background-color: #f0f8f0 !important; /* Light green background */
		font-weight: 600 !important;
		text-decoration: none !important; /* Remove that ugly underline */
	}
</style>