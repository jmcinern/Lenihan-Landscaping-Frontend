---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<a href="/">{SITE_TITLE}</a>
		</div>

		<!-- This is the original desktop menu -->
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>

		<!-- 
			NEW: HAMBURGER BUTTON 
			This button is hidden on desktop and visible on mobile.
		-->
		<button class="hamburger" id="menu-toggle" aria-label="Toggle menu">
			<svg width="30" height="30" viewBox="0 0 100 100">
				<rect class="line top" width="80" height="10" x="10" y="20" rx="5"></rect>
				<rect class="line middle" width="80" height="10" x="10" y="45" rx="5"></rect>
				<rect class="line bottom" width="80" height="10" x="10" y="70" rx="5"></rect>
			</svg>
		</button>
	</nav>

	<!-- 
		NEW: MOBILE MENU 
		This is a new container for the links, hidden by default.
	-->
	<div class="mobile-menu" id="mobile-menu">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/services">Services</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="/contact">Contact</HeaderLink>
	</div>
</header>

<style>
	/* --- Original Desktop Styles --- */
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 960px; 
		margin: 0 auto; 
		padding: 0.5em 0;
	}
	.brand {
		font-size: 1.5em;
		font-weight: 600;
	}
	.brand a {
		text-decoration: none;
		color: var(--text); 
	}
	.nav-links {
		display: flex; /* This is for desktop */
		gap: 1.5em;
	}

	/* --- NEW: Hamburger Icon Styles --- */
	.hamburger {
		display: none; /* Hidden on desktop */
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		z-index: 100;
	}
	.hamburger .line {
		fill: #333; /* Dark grey lines */
		transition: all 0.3s ease-in-out;
	}

	/* --- NEW: Mobile Menu Styles --- */
	.mobile-menu {
		display: none; /* Hidden by default */
		flex-direction: column;
		width: 100%;
		background: white;
		position: absolute;
		left: 0;
		top: 60px; /* Position it just below the header */
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	/* NEW: This class is toggled by JavaScript */
	.mobile-menu.is-open {
		display: flex; /* Show the menu */
	}

	/* --- Media Query for Mobile --- */
	@media (max-width: 720px) {
		.nav-links {
			display: none; /* Hide desktop links */
		}
		.hamburger {
			display: block; /* Show hamburger button */
		}
	}

	/* --- Original Link Styling (Global) --- */
	:global(.nav-links a) {
		text-decoration: none !important;
		color: #555 !important;
		background-color: transparent !important;
		padding: 0.5em 1em;
		border-radius: 6px;
		transition: all 0.2s ease;
	}
	:global(.nav-links a:hover) {
		color: #228b22 !important;
		background-color: #f0f8f0 !important;
	}
	:global(.nav-links a.active) {
		color: #228b22 !important;
		background-color: #f0f8f0 !important;
		font-weight: 600 !important;
		text-decoration: none !important;
	}

	/* --- NEW: Styling for links in the MOBILE menu --- */
	:global(.mobile-menu a) {
		text-decoration: none !important;
		color: #333 !important; /* Dark text */
		padding: 1.5em 1em;
		border-bottom: 1px solid #f0f0f0;
		text-align: center;
		font-size: 1.1em;
	}
	:global(.mobile-menu a:hover) {
		background-color: #f0f8f0 !important; /* Light green hover */
		color: #228b22 !important; /* Garden green text */
	}
	:global(.mobile-menu a.active) {
		background-color: #f0f8f0 !D;
		color: #228b22 !important;
		font-weight: 600 !important;
	}
</style>

<!-- 
	NEW: CLIENT-SIDE JAVASCRIPT
	This script toggles the 'is-open' class on the mobile menu
	when the hamburger button is clicked.
-->
<script>
	document.getElementById('menu-toggle').addEventListener('click', function() {
		document.getElementById('mobile-menu').classList.toggle('is-open');
	});
</script>